<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pages.download.DownloadPageController">

    <HBox alignment="CENTER" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="30.0">
        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Downloads" textAlignment="CENTER">
            <font>
                <Font name="Monospaced Regular" size="25.0" />
            </font>
        </Text>
    </HBox>

    <Button mnemonicParsing="false" onAction="#goToHome" styleClass="close-btn" text="X" AnchorPane.rightAnchor="35.0" AnchorPane.topAnchor="30.0" />

    <ScrollPane fitToWidth="true" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="27.0" AnchorPane.rightAnchor="27.0" AnchorPane.topAnchor="88.0">
    <content>
    <VBox spacing="10.0">
    <children>
    <HBox fx:id="topBar1" alignment="CENTER_LEFT" blendMode="SCREEN" prefHeight="50.0" styleClass="row-box" stylesheets="../../css/home.css">
        <children>
            <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="The downloader uses yt-dlp and ff-mpeg. Make sure you have that installed" textAlignment="CENTER">
                <font>
                    <Font name="Monospaced Regular" size="13.0" />
                </font>
            </Text>
        </children>
    </HBox>
        <HBox fx:id="topBar2" alignment="CENTER_LEFT" blendMode="SCREEN" prefHeight="50.0" styleClass="row-box" stylesheets="../../css/home.css">
            <children>
                <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Enter Link:" textAlignment="CENTER">
                    <font>
                        <Font name="Monospaced Regular" size="13.0" />
                    </font>
                </Text>
                <TextField fx:id="linkInput" prefWidth="400" promptText="Paste YouTube URL here" styleClass="download-input">
                        <HBox.margin>
                           <Insets left="10.0" />
                        </HBox.margin></TextField>
                     <Button mnemonicParsing="false" text="Download" onAction="#download">
                        <HBox.margin>
                           <Insets left="10.0" />
                        </HBox.margin>
                     </Button>
            </children>
        </HBox>
               <HBox fx:id="topBar21" alignment="CENTER_LEFT" blendMode="SCREEN" HBox.hgrow="ALWAYS" styleClass="row-box" stylesheets="../../css/home.css">
                  <children>
                      <VBox spacing="10.0"
                            HBox.hgrow="ALWAYS">
                          <children>
                              <Text fill="WHITE"
                                    text="Terminal"
                                    textAlignment="CENTER">
                                  <font>
                                      <Font name="Monospaced Regular" size="13.0" />
                                  </font>
                              </Text>

                              <!-- Terminal Output Area -->
                              <TextArea fx:id="terminalOutput"
                                        editable="false"
                                        prefHeight="200"
                                        VBox.vgrow="ALWAYS">

                              </TextArea>

                          </children>
                      </VBox>
                  </children>
               </HBox>
    </children>
    </VBox>
    </content>
    </ScrollPane>

</AnchorPane>
