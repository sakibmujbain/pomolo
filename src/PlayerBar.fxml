<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.shape.SVGPath?>
<?import javafx.scene.text.Text?>

<HBox fx:id="playerBarPane" alignment="CENTER_LEFT" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity" prefHeight="60.0" spacing="12.0" style="-fx-background-color: rgba(26, 26, 26, 0.85);" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="PlayerBarController">
    <children>
        <Button fx:id="prevButton" mnemonicParsing="false" onAction="#handlePrevious" styleClass="player-bar-button">
            <graphic>
                <SVGPath content="M14 4h2v8h-2zm-4 4V4l-6 4 6 4z" fill="white" />
            </graphic>
        </Button>
        <Button fx:id="playPauseButton" mnemonicParsing="false" onAction="#handlePlayPause" styleClass="player-bar-button">
            <graphic>
                <SVGPath fx:id="playPauseIcon" content="M6 4l8 6-8 6z" fill="white" />
            </graphic>
        </Button>
        <Button fx:id="nextButton" mnemonicParsing="false" onAction="#handleNext" styleClass="player-bar-button">
            <graphic>
                <SVGPath content="M4 4h2v8H4zm10 4L8 4v8z" fill="white" />
            </graphic>
        </Button>
        <Text fx:id="currentSongText" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="No song selected" HBox.hgrow="NEVER">
            <HBox.margin>
                <Insets left="10.0" right="10.0" />
            </HBox.margin>
        </Text>
        <Text fx:id="currentTimeText" fill="#999999" strokeType="OUTSIDE" strokeWidth="0.0" text="00:00" />
        <Slider fx:id="progressSlider" HBox.hgrow="ALWAYS" />
        <Text fx:id="totalTimeText" fill="#999999" strokeType="OUTSIDE" strokeWidth="0.0" text="00:00" />
        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Vol:">
            <HBox.margin>
                <Insets left="15.0" />
            </HBox.margin>
        </Text>
        <Slider fx:id="volumeSlider" max="1.0" prefWidth="120.0" value="0.8" />
    </children>
    <padding>
        <Insets left="20.0" right="20.0" />
    </padding>
</HBox>